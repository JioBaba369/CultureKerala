
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSelf(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }

    // Rules for collections
    match /users/{uid} {
      allow read: if isSelf(uid) || isAdmin();
      allow create: if isSignedIn();
      allow update: if isSelf(uid)
                    && !('wallet' in request.resource.data)
                    && !('clubMembership' in request.resource.data)
                    && !('roles' in request.resource.data);
      allow update: if isAdmin(); // Admins can update roles
    }
    
    match /users/{uid}/{subcollection}/{docId} {
        // block client writes to wallet/clubMembership (server only)
        allow read: if isSelf(uid) || isAdmin();
        allow write: if false; // only via Cloud Functions
    }

    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isSignedIn();
    }
    
    match /communities/{communityId} {
        allow read: if true;
        allow create, update, delete: if isSignedIn();
    }

    match /businesses/{businessId} {
        allow read: if true;
        allow create, update, delete: if isSignedIn();
    }
    
    match /deals/{dealId} {
        allow read: if true;
        allow create, update, delete: if isSignedIn();
    }

    match /movies/{movieId} {
        allow read: if true;
        allow create, update, delete: if isSignedIn();
    }
    
    match /bookings/{bookingId} {
        allow read, create: if isSignedIn();
    }

    match /reports/{reportId} {
        allow read: if isAdmin();
        allow create: if isSignedIn();
        allow update: if isAdmin();
    }
    
    match /saves/{saveId} {
        allow read, write, delete: if isSignedIn();
    }
    
    match /contact-messages/{messageId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }
    
    match /perks/{perkId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /rewards/{rewardId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /subscriptions/{sid} {
        allow read, write: if isSignedIn() && request.auth.uid == request.resource.data.userId;
    }
  }
}
