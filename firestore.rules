
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to published content
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null; // Simplistic rule: any logged-in user can write
    }

    match /communities/{communityId} {
      allow read: if true;
      allow write: if request.auth.uid == resource.data.ownerId || request.auth.uid in resource.data.roles.admins || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }

    match /businesses/{businessId} {
      allow read: if true;
      allow write: if request.auth.uid == resource.data.ownerId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }

    match /movies/{movieId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /deals/{dealId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow users to manage their own user document
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
