
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isOrganizer(event) {
      return request.auth.uid in event.organizers;
    }

    // Public read for published content
    match /events/{eventId} {
      allow read: if resource.data.status == 'published';
      allow write: if isSignedIn(); // Simplified for now
    }

    match /communities/{communityId} {
      allow read: if resource.data.status == 'published';
      allow write: if isSignedIn(); 
    }

    match /businesses/{businessId} {
      allow read: if resource.data.status == 'published';
      allow write: if isSignedIn();
    }
     match /deals/{dealId} {
      allow read: if resource.data.status == 'published';
      allow write: if isSignedIn();
    }

    match /movies/{movieId} {
      allow read: if resource.data.status == 'now_showing';
      allow write: if isSignedIn();
    }

    // User-specific data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /saves/{saveId} {
      allow create, read, delete: if isOwner(resource.data.userId);
    }
  }
}
