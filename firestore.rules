rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Public read for main content types
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && (request.auth.uid == resource.data.createdBy || request.auth.uid in resource.data.organizers);
    }

    match /communities/{communityId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid in resource.data.roles.owners;
    }

    match /businesses/{businessId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.ownerId;
    }
    
    match /deals/{dealId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/businesses/$(request.resource.data.businessId)).data.ownerId;
    }

    match /movies/{movieId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Users can only read/update their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }

    // Bookings
    match /bookings/{bookingId} {
        allow read, create: if request.auth.uid == request.resource.data.userId;
        match /tickets/{ticketId} {
             allow read, create: if request.auth.uid == request.resource.data.userId;
        }
    }

    // Reports - only create
    match /reports/{reportId} {
        allow create: if request.auth != null;
        allow read, update: if request.auth.token.admin == true || request.auth.token.moderator == true;
    }

    // Saves
    match /saves/{saveId} {
      allow read, create, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Contact Messages - only create
    match /contact-messages/{messageId} {
      allow create: if true;
      allow read, update, delete: if request.auth.token.admin == true;
    }
  }
}
