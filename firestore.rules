
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSelf(userId) {
      return request.auth.uid == userId;
    }
    
    function isUpdatingOnboardingData() {
      return request.resource.data.diff(resource.data).affectedKeys().hasAll(['interests', 'dob', 'gender', 'hasCompletedOnboarding']);
    }

    match /users/{userId} {
      allow read;
      allow create: if isSelf(userId);
      allow update: if isSelf(userId) && isUpdatingOnboardingData();
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
