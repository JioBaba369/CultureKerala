
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only create their own user document and can only read/update their own.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Public collections are read-only for everyone, but writable only by authenticated users.
    // More specific write rules should be added per collection as needed (e.g. only owners can write).
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    match /communities/{communityId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
     match /businesses/{businessId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
     match /deals/{dealId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
     match /movies/{movieId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
     match /classifieds/{classifiedId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
     match /perks/{perkId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    match /rewards/{rewardId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
     match /emergency_contacts/{contactId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Bookings and saves should only be accessible by the user who created them.
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    match /saves/{saveId} {
        allow read, delete: if request.auth != null && request.auth.uid == resource.data.userId;
        allow create: if request.auth != null;
    }

    // Contact messages and reports are write-only for users.
    match /contact-messages/{messageId} {
        allow create: if true;
    }
    match /reports/{reportId} {
        allow create: if request.auth != null;
    }
  }
}
