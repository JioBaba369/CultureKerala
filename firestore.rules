rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =================================
    // Helper functions
    // =================================
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isUserAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }
    
    function isUserModerator() {
      let userRoles = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles;
      return userRoles.admin == true || userRoles.moderator == true;
    }

    function isUserOrganizer() {
       let userRoles = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles;
      return userRoles.admin == true || userRoles.organizer == true;
    }
    
    function isOwner(docId) {
       return request.auth.uid == resource.data.ownerId || request.auth.uid == resource.data.createdBy || request.auth.uid in resource.data.roles.owners;
    }
    
    // =================================
    // Collections
    // =================================

    match /users/{userId} {
      allow read;
      allow create: if isUserAuthenticated();
      allow update: if (isUserAuthenticated() && request.auth.uid == userId && 
                       !('roles' in request.resource.data) &&
                       !('wallet' in request.resource.data) &&
                       !('clubMembership' in request.resource.data)) || isUserAdmin();
    }

    match /events/{eventId} {
      allow read;
      allow create: if isUserOrganizer();
      allow update, delete: if isUserOrganizer() && isOwner(eventId);
    }
    
    match /communities/{communityId} {
      allow read;
      allow create: if isUserAuthenticated();
      allow update, delete: if isUserOrganizer() && isOwner(communityId);
    }

    match /businesses/{businessId} {
        allow read;
        allow create: if isUserAuthenticated();
        allow update, delete: if isUserOrganizer() && isOwner(businessId);
    }

    match /deals/{dealId} {
        allow read;
        allow create: if isUserOrganizer();
        allow update, delete: if isUserOrganizer() && isOwner(dealId);
    }

    match /movies/{movieId} {
        allow read;
        allow create, update, delete: if isUserOrganizer();
    }
    
    match /perks/{perkId} {
        allow read;
        allow create, update, delete: if isUserAdmin();
    }

     match /rewards/{rewardId} {
        allow read;
        allow create, update, delete: if isUserAdmin();
    }

    match /ads/{adId} {
        allow read;
        allow create, update, delete: if isUserAdmin();
    }

    match /contact-messages/{messageId} {
      allow create;
      allow read, update, delete: if isUserAdmin();
    }
    
    match /reports/{reportId} {
        allow create: if isUserAuthenticated();
        allow read, update, delete: if isUserModerator();
    }
    
    match /saves/{saveId} {
        allow read, create, delete: if isUserAuthenticated();
    }

    match /bookings/{bookingId} {
        allow read, create: if isUserAuthenticated();
        match /tickets/{ticketId} {
            allow read, create: if isUserAuthenticated();
        }
    }
  }
}
