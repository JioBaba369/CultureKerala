
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSelf(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    function isUser() {
        return request.auth != null;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }
    
    match /users/{uid} {
      allow read: if true;
      allow write: if isSelf(uid);
      allow list: if isAdmin();
    }
    
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isUser(); // Further logic in CF
    }

    match /communities/{communityId} {
      allow read: if true;
      allow create, update, delete: if isUser(); // Further logic in CF
    }
    
    match /businesses/{businessId} {
      allow read: if true;
      allow create, update, delete: if isUser(); // Further logic in CF
    }

    match /deals/{dealId} {
      allow read: if true;
      allow create, update, delete: if isUser(); // Further logic in CF
    }

    match /movies/{movieId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /perks/{perkId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /rewards/{rewardId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /ads/{adId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    match /bookings/{bookingId} {
        allow create: if isUser();
        allow read, update, delete: if isUser() || isAdmin(); // More specific rules needed
    }

    match /reports/{reportId} {
        allow create: if isUser();
        allow read, update, delete: if isAdmin();
    }

    match /saves/{saveId} {
        allow read, write, delete: if isUser(); // More specific rules needed
    }

    match /contact-messages/{messageId} {
        allow create: if true;
        allow read, delete: if isAdmin();
    }
  }
}
