
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to main content collections
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }

    match /communities/{communityId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid in resource.data.roles.owners;
    }
    
    match /businesses/{businessId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    match /deals/{dealId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }

    match /movies/{movieId} {
        allow read: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }

    match /classifieds/{classifiedId} {
        allow read: if true;
        allow write: if request.auth != null && (request.auth.uid == resource.data.createdBy || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true);
    }
    
    match /perks/{perkId} {
        allow read: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }
    
    match /rewards/{rewardId} {
        allow read: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }

    // Users can read their own data and update their own profile
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Bookings and tickets management
    match /bookings/{bookingId} {
        allow read: if request.auth != null && (request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true);
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    match /bookings/{bookingId}/tickets/{ticketId} {
        allow read, write: if request.auth != null && (get(/databases/$(database)/documents/bookings/$(bookingId)).data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true);
    }
    
    // Allow logged-in users to manage their saved items
    match /saves/{saveId} {
        allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow logged-in users to create reports
    match /reports/{reportId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.reporterId;
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.moderator == true;
    }

    // Admins can manage ads
    match /ads/{adId} {
       allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }

  }
}
