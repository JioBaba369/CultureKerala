rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files. This is safe for public assets
    // like profile pictures, event banners, etc.
    match /{allPaths=**} {
      allow read;
    }

    // Restrict write access. Only authenticated users can write to their own
    // sandboxed folder within the 'uploads' directory.
    match /uploads/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
