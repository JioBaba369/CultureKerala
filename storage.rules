
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files by default
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes to the 'uploads' directory only for authenticated users
    // and enforce a reasonable file size limit (e.g., 5MB).
    match /uploads/{fileName} {
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
