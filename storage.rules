rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to write to an 'uploads' directory.
    // This rule is simple, but for production you'd want to add more checks,
    // e.g. for file size, type, and ensuring the user isn't spamming uploads.
    match /uploads/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
