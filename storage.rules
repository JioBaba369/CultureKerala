
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to write to an 'uploads' folder
    match /uploads/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
